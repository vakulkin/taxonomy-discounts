{
    "name": "anton-vakulov/taxonomy-discounts",
    "description": "WordPress plugin for taxonomy-specific discounts",
    "type": "wordpress-plugin",
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-cli/wp-cli": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "TaxonomyDiscounts\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TaxonomyDiscounts\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}